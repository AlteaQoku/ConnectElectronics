@page
@model IndexModel
@using Microsoft.AspNetCore.Identity;
@using ConnectElectronics.Models;
@inject UserManager<ApplicationUser> _userManager

@{
    var user = await _userManager.GetUserAsync(User);
    string firstName = user.FirstName +" "+ user.LastName;
    
}

 
<h3 style="margin-top:30px;color:#D10024;">@firstName</h3>


    <div style="" >
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-floating" style="margin-right:400px;">
                <label asp-for="Input.FirstName" class="form-label"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
        <div class="form-floating" style="margin-right:400px;">
                <label asp-for="Input.LastName" class="form-label"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
        <div class="form-floating" style="margin-right:400px;">
                <label asp-for="Username" class=""></label>
                <input asp-for="Username" class="form-control" disabled />

            </div>
        <div class="form-floating" style="margin-right:400px;">
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
        <div class="form-floating" style="margin-right:400px;">
                <label asp-for="Input.Birthday" class="form-label"></label>
                <input asp-for="Input.Birthday" class="form-control" />
                <span asp-validation-for="Input.Birthday" class="text-danger"></span>
            </div>
        <div class="form-floating" style="margin-right:400px;">
                <label asp-for="Input.City" class="form-label"></label>
                <input asp-for="Input.City" class="form-control" />
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
        <div class="form-floating" style="margin-right:400px;">
                <label asp-for="Input.Street" class="form-label"></label>
                <input asp-for="Input.Street" class="form-control" />
                <span asp-validation-for="Input.Street" class="text-danger"></span>
            </div>
        <div class="form-floating" style="margin-right:400px;">
                <label asp-for="Input.PostalNumber" class="form-label"></label>
                <input asp-for="Input.PostalNumber" class="form-control" />
                <span asp-validation-for="Input.PostalNumber" class="text-danger"></span>
            </div>
        <div class="form-floating" style="margin-right:400px;">
                <label asp-for="Input.HouseNr" class="form-label"></label>
                <input asp-for="Input.HouseNr" class="form-control" />
                <span asp-validation-for="Input.HouseNr" class="text-danger"></span>
            </div>
        <button id="update-profile-button" type="submit" class="w-100 btn search-btn " style="background-color:#D10024;color:white;margin-top:20px;margin-bottom:20px;">Save</button>
        </form>
    </div>
<p class="nav-item"><a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">Change Password</a></p>

@{
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<partial name="_StatusMessage" for="StatusMessage" />
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
