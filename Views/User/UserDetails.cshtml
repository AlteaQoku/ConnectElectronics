@model ConnectElectronics.Models.ApplicationUser


<div class="page-content page-container" id="page-content">
    <div class="padding">
        <div class="row container d-flex justify-content-center">
            <div class="col-xl-6 col-md-12">
                <div class="card user-card-full">
                    <div class="row m-l-0 m-r-0">
                        <div class="col-sm-3 bg-c-lite-green user-profile">
                            <div class="card-block text-center text-white">
                                <div class="m-b-25">
                                    <img src="https://cdn.onlinewebfonts.com/svg/img_508630.png" width="50px" height="50px" class="img-radius" alt="User-Profile-Image">
                                </div>

                                <h6 class="f-w-600">@Model.UserName</h6>
                                <p>@Model.FirstName @Model.LastName </p>
                                <i class=" mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>
                            </div>
                        </div>
                        <div class="col-sm-9">
                            <div class="card-block">
                                <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Information</h6>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Email</p>
                                        <h6 class="text-muted f-w-400">@Model.Email</h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Birthday</p>
                                        <h6 class="text-muted f-w-400">@Model.Birthday.ToString("dd - M - yyyy")</h6>
                                    </div>
                                </div>
                                <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Additional information</h6>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">City</p>
                                        <h6 class="text-muted f-w-400">@Model.City</h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Phone Number</p>
                                        <h6 class="text-muted f-w-400">@Model.PhoneNumber</h6>
                                    </div>
                                
                                </div>
                                <a class="btn btn-danger" asp-action="Delete" asp-controller="User" asp-route-id="@Model.Id"> Delete</a>
                                <a class="btn btn-info" asp-action="Edit" asp-controller="User" asp-route-id="@Model.Id"> Edit</a>
                                <a class="btn btn-primary" asp-action="ShowPasswordForm" asp-controller="User" asp-route-id="@Model.Id">Change Password</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>