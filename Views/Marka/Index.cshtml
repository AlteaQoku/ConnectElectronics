@model IEnumerable<ConnectElectronics.Models.Marka>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="padding-left:150px">

<h1>Lista e Markave</h1>
@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">Krijo Marke te re</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Emri)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shteti)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    <a asp-controller="Produkt" asp-action="MarkaProdukte" asp-route-emri="@item.Emri">@item.Emri</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shteti)
            </td>
            <td>
                    @if (User.IsInRole("Admin")){
                    
                <a asp-action="Edit" asp-route-id="@item.Id">Edito</a> 
                <a asp-action="Delete" asp-route-id="@item.Id">Fshi</a>
                    }                    
            </td>
        </tr>
}
    </tbody>
</table>
    </div>
