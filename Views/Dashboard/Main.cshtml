<link rel="stylesheet" href="~/css/dashboard.css"/>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js" integrity="sha512-3gJwYpMe3QewGELv8k/BX9vcqhryRdzRMxVfq6ngyWXwo03GFEzjsUm8Q7RZcHPHksttq7/GFoxjCVUjkjvPdw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<div class="mainDDiv">
    <h1>The Dashboard</h1>
    <p >Check information regarding Page-Traffic/Sales/Trends etc.</p>
    <div class="dashboard">
        <div class="dCard">
            <h3>All Users:</h3>
            <span id="users"></span>
        </div>
        <div class="dCard" id="showProductsContainer">
            <h3>Produktet me sasi me te madhe</h3>
            <div id="showProducts">

            </div>
        </div>
        <div class="dCard">let</div>
    </div>
</div>

<script>
    $(document).ready(()=>{

        $.getJSON("/api/WebApi/getUsers", (data)=>{
            $("#users").text(data);
        })
        $.getJSON("/api/WebApi/prodForDiscount",(data)=>{
            data.forEach((product)=>{
                console.log(product)
                let check = product.oferte == true ? "Ne Oferte" : "Jo ne oferte";
                $("#showProducts").append(
                    `<div style="display:flex; justify-content:center; align-items:start; gap:20px;"><h5>${product.emri}</h5><h5>${product.sasia}</h5><h5>${check}</h5></div>`
                )
            })
        })
    })
</script>