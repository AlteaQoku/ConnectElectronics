@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
<h2 style="margin-left:300px;margin-top:20px;">Sites's roles</h2>

<table class="table table-sm table-bordered" style="margin-left:40px;margin-right:40px;margin-left: 200px;margin-right: 200px;width: 50%;margin-top: 40px;">
 <tr><th>Roles</th><th>Manage</th></tr>
 @if (Model.Count() == 0) {
 <tr><td colspan="4" class="text-center">There are no roles avaible.</td></tr>
 } else {
 foreach  (var role in Model) {
 <tr>
 
 <td>@role.Name</td>
 <td>
     <form  method="post" asp-controller="Role" asp-action="Delete" asp-route-id="@role.Id">
              <a class="btn btn-sm btn-warning" asp-controller="Role" asp-route-Id="@role.Id" asp-action="ShowEdit" >Edit</a>
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
     
     </form>
 </td>
 </tr>
 }
 }
</table>
<a asp-action="Create" asp-controller="Role" class="btn " style="margin-right:10px;color:#D10024;margin-left: 450px;margin-bottom:30px;">Add a new Role</a>