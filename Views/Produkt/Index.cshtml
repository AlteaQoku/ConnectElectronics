@model IEnumerable<Produkt>
@{
    ViewData["Title"] = "List of Products";
}

@if (Model.Count() < 1)
{
    <h3>No Result</h3>
}else{

    <br />
    <div style="display: flex; flex-wrap:wrap; width:100%; justify-content:start; align-items:center; gap:10px; padding: 0 10px 20px 10px;">
        @foreach (var item in Model)
        {
             <div class="card" style="width:25%;">
                <div style="background-color:#FF0000; border-top-left-radius:15px; border-top-right-radius:15px; text-align:start; display:flex; justify-content:start; align-items:center; padding-block:10px;">
                    <h5 style="color:white; margin:0; padding-left:10px;">@item.Emri</h5>
                </div>
                <div style=" border-bottom-left-radius:25px; border-bottom-right-radius:25px;display:flex; justify-content:center; align-items:center; padding:5px 10px 10px 10px; gap:10px; background-color:#F1F1F1 ">
                        <div class="">
                            <img class="img-fluid" src="~/images/@item.Foto" width="150px" height="150px" alt="Product Image">
                        </div>
                        <div class="">
                            <br />
                            
                            <a asp-action="Details" asp-route-id="@item.Id" style="text-decoration:none; cursor:pointer; ">
                                <p class="card-text">@item.Pershkrimi</p>
                                <p class="card-text text-success">@item.Cmimi $</p>
                                <p class="card-text"><b>Category: </b>@item.Kategori.Emri</p>
                            </a>
                        <p class="card-text">
                            <b>Brand: </b>
                            <a asp-controller="Marka" asp-action="Details" asp-route-id="@item.marka.Id">@item.marka.Emri</a>
                        </p>
                        <a asp-controller="Cart" asp-action="Add" asp-route-id="@item.Id"><i class="fa-solid fa-cart-plus fa-2xl" style="color: #ff0000;"></i></a>
                        </div>
                </div>
            </div>
            
        }
    </div>
}




