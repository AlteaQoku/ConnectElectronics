@model Produkt
@{
    ViewData["Title"] = "Fshirja e Produktit";
}
<div style="display: flex; flex-wrap:wrap; width:100%; justify-content:start; align-items:center; gap:10px; padding: 0 10px 20px 10px;">
   
        <div class="card" style="width:50%; margin:0 auto">
            <div style="background-color:#FF0000; border-top-left-radius:15px; border-top-right-radius:15px; text-align:start; display:flex; justify-content:start; align-items:center; padding-block:10px;">
                <h5 style="color:white; margin:0; padding-left:10px;">@Model.Emri</h5>
            </div>
            <div style=" border-bottom-left-radius:25px; border-bottom-right-radius:25px;display:flex; justify-content:center; align-items:center; padding:5px 10px 10px 10px; gap:10px; background-color:#F1F1F1 ">
                <div class="">
                    <img class="img-fluid" src="~/images/@Model.Foto" width="150px" height="150px" alt="Product Image">
                </div>
                <div class="">
                    <br />
                    <div style="padding-left:50px">
                    <a asp-action="Details" asp-route-id="@Model.Id" style="text-decoration:none; cursor:pointer; ">
                        <p class="card-text" >@Model.Pershkrimi</p>
                    <p class="card-text text-success">@Model.Cmimi $</p>
                    <p class="card-text" ><b>Category: </b>@Model.Kategori.Emri</p>
                    </a>
                    <p class="card-text">
                        <b>Brand: </b>
                        <a asp-controller="Marka" asp-action="Details" asp-route-id="@Model.marka.Id">@Model.marka.Emri</a>
                    </p>
                </div>
                    <div class="d-flex">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                        <a class="btn btn-danger float-left mr-2" asp-action="Index">Kthehu Pas</a>
                </form>
                </div>
                </div>
            </div>
        </div>
</div>