@model Produkt
@{
    ViewData["Title"] = "Fshirja e Produktit";
}
<div style="padding-left:150px">

<div class="container" style="border-color: black;">
    <br />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-white" style="background-color:#FF0000;height:3.5rem;text-align:center">
                    <h5 class="card-title">@Model.Emri</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <img class="img-fluid" src="~/images/@Model.Foto" alt="Product Image">
                        </div>
                        <div class="col-md-6">
                            <br />
                            <p class="card-text">@Model.Pershkrimi</p>
                            <br />
                            <p class="card-text">
                                <b>Marka: </b>
                                <a class="text-decoration-none" asp-controller="Marka" asp-action="Details" asp-route-id="@Model.marka.Id">@Model.marka.Emri</a>
                            </p>
                            <p class="card-text">
                                <b>Kategoria: </b>@Model.Kategori.Emri
                            </p>
                            <p style="color: #96BEFF;">@Model.Cmimi ALL</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white">
                    <div class="d-flex justify-content-between align-items-center d-inline">
                            <a class="btn btn-danger float-left mr-2" asp-action="Index">Kthehu Pas</a>
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="Id" />
                                <input type="submit" value="Delete" class="btn btn-danger" />
                            </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>